{
  "name": "abcotronics-erp-modular",
  "version": "0.1.1",
  "description": "Abcotronics ERP - Fuel Management Services",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run build:css && npx prisma generate",
    "build:css": "npx tailwindcss -i ./src/styles/main.css -o ./dist/styles.css --minify",
    "railway-build": "npm run build:css && npx prisma generate && echo 'Railway build completed'",
    "postinstall": "npx prisma generate",
    "deploy": "./deploy-production.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "googleapis": "^144.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.8",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "erp",
    "fuel-management",
    "business-management"
