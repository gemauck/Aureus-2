{
  "name": "abcotronics-erp-modular",
  "version": "0.1.1",
  "description": "Abcotronics - Fuel Management Services",
  "type": "module",
  "main": "server.js",
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run build:jsx && npm run build:css && npx prisma generate",
    "build:jsx": "node build-jsx.js",
    "build:css": "npx tailwindcss -i ./src/styles/main.css -o ./dist/styles.css --minify",
    "railway-build": "npm run build:jsx && npm run build:css && npx prisma generate && echo 'Railway build completed'",
    "railway-start": "./deploy-railway-fixes.sh",
    "postinstall": "npx prisma generate",
    "deploy": "./deploy-production.sh",
    "test": "node tests/deployment-test.js",
    "test:deploy": "node tests/deployment-test.js",
    "test:manufacturing": "node tests/manufacturing-browser-test.js",
    "predeploy": "npm run test",
    "validate:deps": "node scripts/validate-component-deps.js",
    "precommit": "npm run validate:deps"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.0",
    "googleapis": "^144.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.8",
    "pino": "^9.3.2",
    "prisma": "^5.18.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.11",
    "glob": "^11.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "erp",
    "fuel-management",
    "business-management"
  ],
  "author": "Abcotronics",
  "license": "MIT"
}
